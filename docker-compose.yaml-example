version: "3.8"
services:
  LEPP:
    container_name: web-server
    build: .
    image: docker-web-server-lepp:stable
    env_file:
      - .env
    volumes:
      - ${HOST_API_DIR:-./src}:/var/projects/api
      - ${HOST_APP_DIR:-./src}:/var/projects/app
    ports:
      - "${HOST_NGINX_PORT:-80}:8080"
      - "${HOST_PG_PORT:-5432}:5432"